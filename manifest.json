{
  "manifest_version": 3,
  "name": "Malicious Link Detector",
  "version": "1.0",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://sitereport.netcraft.com/*",
    "https://api.shodan.io/*",
    "https://www.virustotal.com/api/v3/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "build/index.html",
    "default_icon": "icons/icon128.png"
  }
}